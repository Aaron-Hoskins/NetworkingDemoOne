<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnExecuteHttpUrlConnCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Execute HttpUrlConn Call"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btnExecuteAsyncOkHttp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Execute AsyncOkHttp Call"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btnExecuteSyncOkHttp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Execute SyncOkHttp Call"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btnExecuteAsyncRetrofit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Execute Async Retrofit Call"
        android:onClick="onClick"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUserList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>